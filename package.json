{
  "name": "antigravity-omni-quota",
  "displayName": "Antigravity Omni-Quota",
  "description": "A VS Code extension for managing Omni Quota accounts",
  "version": "1.0.3",
  "publisher": "RicardoGurrola15",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Machine Learning",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "antigravity",
    "ai",
    "quota",
    "monitoring",
    "dashboard",
    "credits",
    "multi-account"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RicardoGurrola15/Antigravity-Omni-Quota.git"
  },
  "bugs": {
    "url": "https://github.com/RicardoGurrola15/Antigravity-Omni-Quota/issues"
  },
  "homepage": "https://github.com/RicardoGurrola15/Antigravity-Omni-Quota#readme",
  "activationEvents": [
    "onStartupFinished",
    "onView:quotaExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "antigravity-quota.focus",
        "title": "Show Quota Panel"
      },
      {
        "command": "antigravity-quota.refresh",
        "title": "Refresh Quota"
      },
      {
        "command": "antigravity-quota.redetect",
        "title": "Re-detect Port"
      },
      {
        "command": "antigravity-quota.clearAccounts",
        "title": "Clear All Accounts"
      },
      {
        "command": "antigravity-quota.removeAccount",
        "title": "Remove Account"
      },
      {
        "command": "antigravity-quota.cleanupAccounts",
        "title": "Clean Up Invalid Accounts"
      },
      {
        "command": "antigravity-quota.validateAccounts",
        "title": "Validate Accounts"
      },
      {
        "command": "antigravity-quota.settings",
        "title": "Settings"
      },
      {
        "command": "antigravity-quota.updateAllAccounts",
        "title": "Update All Accounts Times"
      }
    ],
    "configuration": {
      "title": "Antigravity Omni-Quota",
      "properties": {
        "antigravity-quota.enableMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable quota monitoring"
        },
        "antigravity-quota.pollingInterval": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Quota data refresh frequency in seconds"
        },
        "antigravity-quota.warningThreshold": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "Warning threshold percentage"
        },
        "antigravity-quota.criticalThreshold": {
          "type": "number",
          "default": 30,
          "minimum": 0,
          "maximum": 100,
          "description": "Critical threshold percentage"
        },
        "antigravity-quota.statusBarStyle": {
          "type": "string",
          "enum": [
            "dots",
            "percentage"
          ],
          "default": "dots",
          "description": "Status bar display style"
        },
        "antigravity-quota.showGeminiPro": {
          "type": "boolean",
          "default": true,
          "description": "Show Gemini Pro quota"
        },
        "antigravity-quota.showGeminiFlash": {
          "type": "boolean",
          "default": true,
          "description": "Show Gemini Flash quota"
        },
        "antigravity-quota.language": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "es",
            "ru",
            "zh",
            "ko",
            "ja",
            "fr",
            "de"
          ],
          "default": "auto",
          "description": "Language setting (auto detects VS Code locale)"
        },
        "antigravity-quota.enableNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Enable notifications when quota falls below critical threshold"
        },
        "antigravity-quota.showOnlyLowQuota": {
          "type": "boolean",
          "default": false,
          "description": "Show only models with quota below warning threshold in status bar and tree"
        },
        "antigravity-quota.autoRefreshOnFocus": {
          "type": "boolean",
          "default": false,
          "description": "Automatically refresh quota when VS Code window gains focus"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quota-explorer-container",
          "title": "Omni Quota",
          "icon": "media/quota-icon.svg"
        }
      ]
    },
    "views": {
      "quota-explorer-container": [
        {
          "id": "quotaExplorer",
          "name": "Linked Accounts",
          "visibility": "visible",
          "icon": "media/quota-icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "bundle": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "axios": "^1.13.2",
    "esbuild": "^0.27.2",
    "typescript": "^4.9.5"
  }
}
